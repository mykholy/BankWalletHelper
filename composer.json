{
    "name": "mykholy/bankwallethelper",
    "description": "Bank Wallet Helper Api",
    "keywords": [
        "mykholy",
        "bankwallethelper"
    ],
    "homepage": "https://github.com/mykholy/bankwallethelper",
    "license": "MIT",
    "type": "library",
    "authors": [{
        "name": "Ahmed El-kholy",
        "email": "mykholys30@gmail.com",
        "role": "Developer"
    }],
    "minimum-stability": "stable",

    "require": {
        "php": "^7.1",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Mykholy\\BankWalletHelper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mykholy\\BankWalletHelper\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
